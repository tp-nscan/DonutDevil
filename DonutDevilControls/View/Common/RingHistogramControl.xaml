<UserControl x:Class="DonutDevilControls.View.Common.RingHistogramControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:graphics="clr-namespace:WpfUtils.Views.Graphics;assembly=WpfUtils"
             xmlns:common="clr-namespace:DonutDevilControls.ViewModel.Design.Common"
             x:Name="UserControl"
             d:DataContext="{d:DesignInstance {x:Type common:DesignRingHistogramVm}, IsDesignTimeCreatable=True}"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid>

        <graphics:WbImage
            ImageWidth="{Binding LegendVm.ImageWidth}" ImageHeight="{Binding LegendVm.ImageHeight}"
            PlotLines="{Binding LegendVm.PlotLines}"
           />

        <graphics:WbImage
            ImageWidth="{Binding HistogramVm.ImageWidth}" ImageHeight="{Binding HistogramVm.ImageHeight}"
            PlotLines="{Binding HistogramVm.PlotLines, Delay=100}"/>
        
        <Border
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Padding="2,0" 
            CornerRadius="2">
            <TextBlock Text="{Binding Title}" Foreground="Yellow"/>
        </Border>


    </Grid>

</UserControl>
