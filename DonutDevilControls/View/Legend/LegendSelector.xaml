<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:legend="clr-namespace:DonutDevilControls.View.Legend">


    <DataTemplate x:Key="DefaultTemplate">
        <TextBox Text="DefaultTemplate"/>
    </DataTemplate>

    <DataTemplate x:Key="TorusTemplateLoad">
        <legend:TorusLegendLoadControl/>
    </DataTemplate>

    <DataTemplate x:Key="RingTemplateLoad">
        <legend:RingLegendLoadControl/>
    </DataTemplate>

    <legend:LegendSelector x:Key ="LegendLoadSelector"
        TorusTemplate="{StaticResource TorusTemplateLoad}"
        RingTemplate="{StaticResource RingTemplateLoad}"
        DefaultTemplate="{StaticResource DefaultTemplate}"            
    />

    <DataTemplate x:Key="TorusTemplateDisplay">
        <legend:TorusHistogramControl/>
    </DataTemplate>

    <DataTemplate x:Key="RingTemplateDisplay">
        <legend:RingHistogramControl/>
    </DataTemplate>

    <legend:LegendSelector x:Key ="HistogramSelector"
        TorusTemplate="{StaticResource TorusTemplateDisplay}"
        RingTemplate="{StaticResource RingTemplateDisplay}"
        DefaultTemplate="{StaticResource DefaultTemplate}"            
    />
</ResourceDictionary>