<Application x:Class="DonutDevilMain.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Startup="App_Startup">
    
    <Application.Resources>


        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/View/MainWindowSelector.xaml"/>
                <ResourceDictionary Source="/DonutDevilControls;component/View/Params/ParamEditorSelector.xaml"/>
                <ResourceDictionary Source="/DonutDevilControls;component/View/Legend/LegendSelector.xaml"/>
                <ResourceDictionary Source="/DonutDevilControls;component/View/Legend/HistogramSelector.xaml"/>
                <ResourceDictionary Source="/DonutDevilControls;component/ControlStyles.xaml"/>
                <ResourceDictionary Source="ScrollViewerTemplate.xaml"/>
                <ResourceDictionary Source="/DonutDevilControls;component/ButtonTemplates.xaml"/>

            </ResourceDictionary.MergedDictionaries>

            <!--wpf bug workaround see http://projekt202.com/blog/2010/xaml-organization/-->
            <Style TargetType="{x:Type Button}"></Style>

        </ResourceDictionary>
    </Application.Resources>
    
</Application>
