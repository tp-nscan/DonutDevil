<UserControl x:Class="La.View.EntityControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:common="clr-namespace:La.ViewModel.Design"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance {x:Type common:DesignEntityVm}, IsDesignTimeCreatable=True}"
             Background="#2FFF"
             d:DesignWidth="300">
    <Grid>
        
        <StackPanel>
            <StackPanel Margin="0,0,20,0" Orientation="Horizontal">
                <TextBlock Foreground="Beige" Text="Name:" Margin="0,0,5,0" VerticalAlignment="Center" />
                <TextBlock FontSize="18" Text="{Binding Name}" Foreground="Beige"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
